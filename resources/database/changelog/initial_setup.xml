<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="create-tables" author="freshro3es">
        <createTable tableName="employee">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="firstname" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="fathername" type="VARCHAR(50)"/>
            <column name="position" type="VARCHAR(50)"/>
            <column name="account" type="VARCHAR(50)">
                <constraints unique="true"/>
            </column>
            <column name="email" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="is_temporary_pwd" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="team">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)"/>
        </createTable>

        <createTable tableName="project">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="fk_team" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_team"
                             references="team(id)"/>
            </column>
            <column name="name" type="VARCHAR(50)"/>
            <column name="description" type="TEXT"/>
            <column name="status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="employee_in_team">
            <column name="fk_team" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_team"
                             references="team(id)"/>
            </column>
            <column name="fk_employee" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_employee"
                             references="employee(id)"/>
            </column>
            <column name="role" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <constraint primaryKey="true" primaryKeyName="employee_in_team_pk">
                <columnNames>fk_team, fk_employee</columnNames>
            </constraint>
        </createTable>

        <createTable tableName="task">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="fk_employee" type="BIGINT">
                <constraints foreignKeyName="fk_employee"
                             references="employee(id)"/>
            </column>
            <column name="fk_project" type="BIGINT">
                <constraints foreignKeyName="fk_project"
                             references="project(id)"/>
            </column>
            <column name="labour_hours" type="INTERVAL"/>
            <column name="deadline" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="author" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
